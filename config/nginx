server {
        listen 80;
        server_name phpaps;
        root /srv/http/phpaps;

        index index.php;

        location ~ ^/(config|\.ht|README) {
                deny all;
        }

        location / {
                try_files $uri $uri/ index.php;
        }

        location ~ ^(.+?\.php)(/.*)?$ {
                try_files $1 = 404;

                include fastcgi_params;
                fastcgi_param SCRIPT_FILENAME $document_root$1;
                fastcgi_param PATH_INFO $2;
                fastcgi_pass php-handler;
        }

}
